<odoo>
<record id="vehicle_rental_report_wizard_view_form" model="ir.ui.view">
    <field name="model">vehicle.rental.report.wizard</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form>
            <separator string="Vehicle Rental Report"/>
            <footer>
                <button name="open_report" string="Print" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-default" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="action_vehicle_rental_report_wizard" model="ir.actions.act_window">
    <field name="name">Vehicle Rentals</field>
    <field name="res_model">vehicle.rental.report.wizard</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem
    parent="fleet.menu_fleet_reporting"
    action="action_vehicle_rental_report_wizard"
    sequence="3"
    id="menu_action_vehicle_rental_report_wizard"/>
</odoo>
